{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": [
      "ESNext"
    ],
    "target": "ESNext", // Target ESNext for latest features
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler", // Use bundler module resolution
    "allowImportingTsExtensions": true, // Allow importing .ts files
    "verbatimModuleSyntax": true, // Use verbatim module syntax
    "noEmit": true, // Do not emit files
    // Best practices
    "strict": true, // Enable strict mode
    "skipLibCheck": true, // Skip type checking of .d.ts files
    "noFallthroughCasesInSwitch": true, // Enable no fallthrough cases in switch
    "noUncheckedIndexedAccess": true, // Enable no unchecked indexed access
    "noImplicitOverride": true, // Enable no implicit override
    // Some stricter flags (disabled by default)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src"
  ]
}